{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "types": ["chrome"],
    "composite": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
